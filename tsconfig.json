{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["types", "./node_modules/@types"]
  },
  "include": [, "routes", "types", "utils", "index.ts"
    "src/**/*",
    "types/**/*",
    "middlewares",
    "lib",
    "controllers",
    "constants"
  ],
  "exclude": ["node_modules"]
}
